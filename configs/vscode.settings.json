{
    // No welcome page
    "workbench.startupEditor": "none",

    // Font
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontWeight": "500", // Medium
    
    // Removes nested scopes from the top of the editor
    "editor.stickyScroll.enabled": false,

    // Vertical ruler + file tree customization
    "editor.rulers": [120],
    "workbench.tree.indent": 32,
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#359bad",
        "tree.indentGuidesStroke": "#4ad5ee"
    },

    // Simplifies minimap
    "editor.minimap.renderCharacters": false,

    // Disable foreign interaction
    "telemetry.telemetryLevel": "off",
    "update.showReleaseNotes": false,
    "update.mode": "none",

    // VSCode ignores javascript validation in HTML files (for better HTMX compability)
    "html.validate.scripts": false
}

