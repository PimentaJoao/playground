{
    // No welcome page
    "workbench.startupEditor": "none",

    // Font
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontWeight": "500", // medium
    
    // Removes nested scopes from the top of the editor
    "editor.stickyScroll.enabled": false,

    // Vertical ruler + file tree customization
    "editor.rulers": [120],
    "workbench.tree.indent": 32,
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#359bad",
        "tree.indentGuidesStroke": "#4ad5ee",
        // Maintains similiar-to-default color for modified git tracked files
        "gitDecoration.modifiedResourceForeground": "#f7d49f"
    },

    // Theme
    "workbench.colorTheme": "GitHub Dark Default",

    // Simplifies minimap
    "editor.minimap.renderCharacters": false,

    // Disable foreign interaction
    "telemetry.telemetryLevel": "off",
    "update.showReleaseNotes": false,
    "update.mode": "none",

    // Smooth animations in VSCode
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "phase",
    "workbench.list.smoothScrolling": true,

    // Svelte stuff
    "svelte.ask-to-enable-ts-plugin": false,
    "svelte.enable-ts-plugin": true,

    // misc
    "git.openRepositoryInParentFolders": "never"
}

